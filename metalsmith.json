{
  "source": "src",
  "destination": "build",
  "plugins": [
    {"metalsmith-watch": {
      "${source}/**/*": "**/*",
      "livereload": true
    }},
    {"metalsmith-markdown": {
      "gfm": true,
      "tables": true,
      "breaks": true,
      "pedantic": false,
      "sanitize": false,
      "smartLists": true,
      "smartypants": true
    }},
    {"metalsmith-sass": {
      "outputStyle": "expanded",
      "sourceMap": true
    }},
    {"metalsmith-autoprefixer": {}},
    {"metalsmith-imagemin": {
      "optimizationLevel": 3,
      "svgoPlugins": [{ "removeViewBox": false }]
    }},
    {"metalsmith-include": {}},
    {"metalsmith-jade": {}},
    {"metalsmith-linkcheck": {}},
    {"metalsmith-gzip": {}},
    {"metalsmith-browser-sync": {
      "server": "build/",
      "files": ["src/layouts/*.html"]
    }}
  ]
}
